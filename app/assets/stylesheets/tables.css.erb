div.td-buffer {
	width: 100%;
	height: 20px;
}

div.main-content {
	float:left;
	margin-left: 10px;
	padding-right:2%;
	border-right:1px solid black;
	max-width: 65%;
}

.right-column {
	float:left;
	padding-left:2%;
	height:100%;
	margin-right:10px;
	max-width:25%;
}

div.error {
	color:red;
}

.login {
	float:right;
	text-align: right;
	padding-right: 30px;
}

.td-solid-black {
	border-top:1px solid black;
}

button > a, button > a:hover {
	text-decoration: none;
	color:white;
}

button.btn-link > a, button.btn-link > a:hover {
	text-decoration: none;
	color:black;
}


th > a {
	color: black;
}

th {
	color: black;
	background-color: #687291;
	padding:2px 10px;
	/*text-align:left;*/
}

th,td {
	/* 1st value is top/bottom, 2nd value is left/right */
	padding:2px 10px; 
	border-left: 1px solid black;
}

table,th {
	border:1px solid black;
}

tr {
	background-color: #dfe1e7;
}

.left_align {
	text-align: left;
}

.center_align {
	text-align: center;
}

.odd_row {
	background-color: #dfe1e7;
}

.even_row {
	background-color: #eeeff2;
}
