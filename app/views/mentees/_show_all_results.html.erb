<table cellspacing="0" class="table table-striped table-bordered">
	<tr>
		<th>
			<%= link_to "Mentee ID", :action=>"show_all", :sort_by => :id %>
		</th>
		<th>
			<%= link_to "First Name", :action=>"show_all", :sort_by => :first_name %>
		</th>
		<th>
			<%= link_to "Last Name", :action=>"show_all", :sort_by => :last_name %>
		</th>
		<th>
			<%= link_to "High School", :action=>"show_all", :sort_by => "highschools.name"%>
		</th>
		<th>
			<%= link_to "Hometown", :action=>"show_all", :sort_by => :city %>
		</th>
		<th>
			<%= link_to "Email", :action=>"show_all", :sort_by => :email %>
		</th>
		<th>
			<%= link_to "Phone", :action=>"show_all", :sort_by => :phone_1 %>
		</th>
	</tr>
	<% @mentees.each do |mentee| %>
		<%= content_tag :tr do %>
			<td>
				<%= link_to mentee.id, :action=>"show", :id => mentee.id %>
			</td>
			<%= content_tag(:td, mentee.first_name, :class => "left-align") %>
			<%= content_tag(:td, mentee.last_name, :class => "left-align") %>
			<%= content_tag(:td, mentee.highschool.name, :class => "left-align") %>
			<%= content_tag(:td, mentee.city, :class => "left-align") %>
			<%= content_tag(:td, mentee.email, :class => "left-align") %>
			<%= content_tag(:td, mentee.phone_1, :class => "left-align") %>
		<% end %>
	<% end %>
</table>